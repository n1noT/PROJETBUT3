{% extends 'base.html.twig' %}

{% block title %}Event Registration{% endblock %}

{% block body %}
    <h1>Event Registration</h1>

    {{ form_errors(eventForm) }}

    {{ form_start(eventForm) }}
        {{ form_row(eventForm.title) }}
        {{ form_row(eventForm.dateStart, {'attr': {'value': event.dateStart|date('Y-m-d\TH:i')}}) }}
        {{ form_row(eventForm.dateEnd, {'attr': {'value': event.dateEnd|date('Y-m-d\TH:i')}}) }}
        {{ form_row(eventForm.description) }}
        {{ form_row(eventForm.visibility) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(eventForm) }}
{% endblock %}
